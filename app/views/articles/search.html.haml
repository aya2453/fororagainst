.container
  %h2.articles-new-title 記事を検索する
  = form_tag '/articles/search', :method => :get do
    %input{:type => "text", :placeholder => "検索したい記事", :name => "keyword"}
    %input{:type => "submit", :value => "検索する"}

.container
  .row
    - @articles.each do |article|
      %article.article-post.col-md-6
        .article-post-inner.effect2
          #like-link
            -if user_signed_in?
              -if current_user.articlelikes.find_by(article_id: article.id)
                = link_to 'いいねを取り消す',articleunlike_path(article.id), method: :delete
                %span#like-count= article.likes_count
              -else
                = link_to 'いいね!', articlelike_path(article.id), method: :post
                %span#like-count= article.likes_count

          #pros
            -if user_signed_in?
              =link_to '賛成', pro_article_path(@article,id: article.id),method: :put
              =article.get_upvotes.size
              =link_to '反対', con_article_path(@article,id: article.id),method: :put
              =article.get_downvotes.size
          .row
            .article-thmubnail.col-xs-3
              = link_to image_tag(article.thumbnail), 'http://www.google.com'
            .article-intro.col-xs-9
              %h2.article-title=link_to article.title, article_path(article.id)
          .article-intro
            %p
              =truncate(article.content, length: 80) do
                %span=link_to '続きを読む', article_path(article.id)