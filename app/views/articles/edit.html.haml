.container
  .row
    .col-md-4.col-md-offset-4
      .form-inner
        %h2.form-title 記事を編集
        = simple_form_for @article, method: :patch do  |f|
          %ul.form-wrap
            =f.hidden_field :user_id, value: current_user.id
            %li
              = f.input :title, placeholder: 'タイトル', label: false, input_html: { class: 'form-control' }
            %li
              = f.input :thumbnail, as: :file, input_html: { class: 'form-control' },label: 'サムネイル画像'
            %li
              = f.input :content, label: false, placeholder: '記事の内容', input_html: { class: 'text-area form-control' }
            %li
              = f.submit '編集する', { class: 'button button-post' }
