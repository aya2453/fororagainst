.container
  .row
    .col-md-4.col-md-offset-4
      .form-inner
        %h2.form-title 新規登録
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          %ul.form-wrap
            %li
              = f.input :nickname, placeholder: '名前', label: false, autofocus: true, maxlength: '6', input_html: { class: 'form-control' }
            %li
              = f.input :email, placeholder: 'メールアドレス', label: false,autofocus: true, input_html: { class: 'form-control' }
            %li
              = f.input :password, placeholder: 'パスワード(８文字以上)', label: false, autocomplete: "off", input_html: { class: 'form-control' }
            %li
              = f.input :password_confirmation, placeholder: 'パスワード再入力', label: false, autocomplete: "off", input_html: { class: 'form-control' }
            .actions
              = f.submit '登録する', { class: 'button button-post' }
          = render "devise/shared/links"
